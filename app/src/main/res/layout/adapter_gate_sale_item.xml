<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:elevation="3dp"
app:cardBackgroundColor="@color/colorWhite"
app:cardElevation="3dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvCustomEmpProduct_Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AB" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivCustomEmpProduct_Image"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tvCustomEmpProduct_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/sofiapro_light"
        android:lines="2"
        android:maxLines="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCustomEmpProduct_Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/sofiapro_light"
            />

        <TextView
            android:id="@+id/tvCustomEmpProduct_CrossPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/sofiapro_light"
            android:gravity="end"
             />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvCustomEmpProduct_Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:fontFamily="@font/awesome"
                android:text="&#xf055;"
                android:textColor="@color/colorAccent"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvCustomEmpProduct_Qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sofiapro_light"
                android:maxLength="3"
                android:maxLines="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCustomEmpProduct_Minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/awesome"
                android:text="&#xf056;"
                android:textColor="@color/colorAccent"
                android:textSize="22sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvCustomEmpProduct_Add"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:fontFamily="@font/sofiapro_light"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:padding="4dp"
            android:text=" Add "
            android:textColor="@color/colorWhite" />


    </LinearLayout>


</LinearLayout>
</android.support.v7.widget.CardView>